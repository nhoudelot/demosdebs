#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1

export DEB_BUILD_MAINT_OPTIONS = hardening=+all

%:
	dh $@  --sourcedirectory=build

override_dh_install:
	dh_install
	pandoc -s -t man -f markdown debian/hxcfloppyemulator.1.md -o debian/hxcfloppyemulator.1
	mkdir -p debian/hxcfloppyemulator/usr/share/icons/hicolor/256x256/apps/
	cp sources/mac/icons/hxcfloppyemulator.iconset/icon_256x256.png debian/hxcfloppyemulator/usr/share/icons/hicolor/256x256/apps/hxcfloppyemulator.png
