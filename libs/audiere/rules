#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all

ifeq "$(DEB_HOST_MULTIARCH)" "x86_64-linux-gnu"
    export DEB_CFLAGS_MAINT_APPEND  = -march=core2
    export DEB_CXXFLAGS_MAINT_APPEND  = -march=core2
endif

CONFIGURE_EXTRA_FLAGS += --libdir=\$${prefix}/lib/$(DEB_HOST_MULTIARCH)

%:
	dh $@  --with autoreconf --parallel

override_dh_autoreconf:
	AUTOMAKE="automake --foreign" autoreconf -is

override_dh_auto_configure:
	dh_auto_configure -- $(CONFIGURE_EXTRA_FLAGS)
	sed 's/@DEB_HOST_MULTIARCH@/$(DEB_HOST_MULTIARCH)/g' \
                debian/libaudiere-1.10.1.links.in > debian/libaudiere-1.10.1.links

override_dh_installchangelogs:
	dh_installchangelogs -a doc/changelog.txt
