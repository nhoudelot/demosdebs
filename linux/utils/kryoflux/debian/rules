#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
ifeq ($(shell dpkg-architecture -qDEB_HOST_MULTIARCH),x86_64-linux-gnu)
	DIR=x86_64
endif
ifeq ($(shell dpkg-architecture -qDEB_HOST_MULTIARCH),i386-linux-gnu)
	DIR=i686
endif

# dh_dwz on buster don't like when there is no .debug_info section
ifneq ($(shell sed -n "s/^VERSION_CODENAME=//p" /etc/os-release),buster)
	RUN_DHDWZ=dh_dwz 
endif

%:
	dh $@ 

override_dh_auto_install:
	find . -name "LICENCE.txt" -delete
	dh_auto_install

override_dh_auto_configure:
	dh_auto_configure
	sed 's/@DIR@/$(DIR)/g' \
                debian/dtc.install.in > debian/dtc.install
                
override_dh_installudev:
	dh_installudev --name=kryoflux --priority=80

override_dh_dwz:
	$(RUN_DHDWZ)

