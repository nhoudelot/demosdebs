#!/usr/bin/make -f
export QT_SELECT := qt5

# dh_dwz on buster don't like when there is no .debug_info section
ifneq ($(shell sed -n "s/^VERSION_CODENAME=//p" /etc/os-release),buster)
	RUN_DHDWZ=dh_dwz 
endif


%:
	dh $@

override_dh_install:
	dh_install
	find debian -type f -name 'resource.rcc' -exec chmod 0644 {} +
	find debian -type f -name 'pentablet' -exec chmod 0755 {} +

override_dh_shlibdeps:
	dh_shlibdeps -- -lApp/usr/lib/pentablet/lib --ignore-missing-info

override_dh_installudev:
	dh_installudev --priority=10

override_dh_dwz:
	$(RUN_DHDWZ)

override_dh_builddeb:
	dh_builddeb -- -Zxz
