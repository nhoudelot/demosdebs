#!/bin/bash -e

source /usr/share/common-install-function-ddebs/common-install-function

domain=trx

APP_FULLNAME="tr1x"
APP_COPYRIGHT="LostArtefacts"
APP_DESC="Game by LostArtefacts, released in 2025"
APP_EXE="tr1x"

function run()
{
	backuppwd=$(pwd)
	cd /usr/lib/@DEB_HOST_MULTIARCH@/tr1x
	./${APP_EXE}
	cd $backuppwd
}


if [ "$#" -gt "1" ]; then
	 NSH_std_usage
	exit 1
elif [ "$#" -lt "1" ]; then
	run
else
	case "$1" in
	--help)
		NSH_std_usage
		;;
	*)
		NSH_std_usage
		exit 1
		;;
	esac
fi

exit 0
