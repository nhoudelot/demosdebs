#!/usr/bin/make -f

# dh_dwz on buster don't like when there is no .debug_info section
ifneq ($(shell sed -n "s/^VERSION_CODENAME=//p" /etc/os-release),buster)
	RUN_DHDWZ=dh_dwz 
endif

%:
	dh $@

override_dh_strip:
	dh_strip -Xlibfmodex-4.30.03.so

override_dh_shlibdeps:
	dh_shlibdeps -- -ldebian/resources -xlibsdl1.2debian --ignore-missing-info

override_dh_dwz:
	$(RUN_DHDWZ)
