 HEADERS = cool_mzx.h pt.h sd_dsp16.h sd_main.h sd_mix.h sd_ns.h
+PLUGIN := --plugin=$(shell gcc --print-file-name=liblto_plugin.so)
 
 cool_mzx.a: $(OBJ)
-	$(AR) rc $@ $(OBJ)
-	$(RANLIB) $@
+	$(AR) rc $(PLUGIN) $@ $(OBJ)
