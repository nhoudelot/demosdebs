This patch header follows DEP-3: http://dep.debian.net/deps/dep3/
--- a/Makefile
+++ b/Makefile
@@ -1,65 +1,68 @@
 # Possible platforms: linux/irix/osx/win32
+SHELL = /bin/sh
 PLATFORM = linux
 # Endianness: LITTLE/BIG (x86,Alpha/MIPS,PPC,SPARC etc.)
 ENDIAN = LITTLE
 
-MAKE = make
 RANLIB = ranlib
-EXE = miracle
