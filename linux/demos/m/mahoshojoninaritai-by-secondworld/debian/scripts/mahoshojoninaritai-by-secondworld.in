#!/bin/bash -e

source /usr/share/common-install-function-ddebs/common-install-function

domain=mahoshojoninaritai-by-secondworld

APP_FULLNAME="Maho shojo ni naritai"
APP_COPYRIGHT="Second World"
APP_DESC="Demo by Second World, released in 2020"

APP_EXE="@EXE@" 

function run()
{
	backuppwd=$(pwd)
	cd /usr/lib/@DEB_HOST_MULTIARCH@/${domain} || exit
    ./${APP_EXE}
	cd $backuppwd || exit
}


if [ "$#" -gt "1" ]; then
	 NSH_std_usage
	exit 1
elif [ "$#" -lt "1" ]; then
	run
else
	case "$1" in
	--help)
		NSH_std_usage
		;;
	*)
		NSH_std_usage
		exit 1
		;;
	esac
fi

exit 0
