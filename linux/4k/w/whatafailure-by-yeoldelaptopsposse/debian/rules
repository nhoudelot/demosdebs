#!/usr/bin/make -f

# dh_dwz on buster don't like when there is no .debug_info section
ifneq ($(shell sed -n "s/^VERSION_CODENAME=//p" /etc/os-release),buster)
	RUN_DHDWZ=dh_dwz 
endif

%:
	dh $@

override_dh_strip:
	dh_strip -Xyo04_lnx

override_dh_dwz:
	$(RUN_DHDWZ)

override_dh_shlibdeps:
	dh_shlibdeps -- -xlibsdl1.2debian
