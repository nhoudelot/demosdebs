--- a/Makefile
+++ b/Makefile
@@ -1,12 +1,38 @@
-all: main
-main:
-	gcc -Os -ffast-math -fshort-double -fpeephole2 -fomit-frame-pointer -c main.c
-	ld -dynamic-linker /lib/ld-linux.so.2 main.o /usr/lib/libSDL.so -o main
