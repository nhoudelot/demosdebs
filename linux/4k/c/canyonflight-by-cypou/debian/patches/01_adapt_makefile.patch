Description: updating makefile
 updating makefile to make it more compatible with packaging
Author: Nicolas HOUDELOT (nicolas@demosdebs.org)
Last-Update: 2020-04-24
---
This patch header follows DEP-3: http://dep.debian.net/deps/dep3/
--- a/Makefile
+++ b/Makefile
@@ -1,6 +1,33 @@
-CC=gcc
-CFLAGS=`sdl-config --cflags` -g -W -Wall -std=c99 -pedantic
-LDFLAGS=`sdl-config --libs` -lGL -lm
+#variables de compilation
+SHELL = /bin/sh
+CC    := gcc
+PKG_CONFIG:=pkg-config
+CFLAGS   += -std=c99 -Wall -pipe $(shell $(PKG_CONFIG) --cflags sdl glu)
+LDFLAGS  += $(shell $(PKG_CONFIG) --libs sdl glu) -lm
+TARGET   := canyonflight-by-cypou
+#variable de nettoyage
+RM_F := rm -f
+#variables d'instalation
+INSTALL = install
+INSTALL_DIR     = $(INSTALL) -p -d -o root -g root  -m  755
+INSTALL_PROGRAM = $(INSTALL) -p    -o root -g root  -m  755
+prefix          = /usr
+exec_prefix     = $(prefix)
+bindir          = $(prefix)/bin
 
-all: canyonflight
+SOURCE          = canyonflight.c
 
+export
+
+all: $(TARGET)
+
+$(TARGET):
+	 $(CC) $(SOURCE) $(CFLAGS) -o $(TARGET) $(LDFLAGS)
+
+install: $(TARGET)
+	$(INSTALL_DIR) $(DESTDIR)$(bindir)
+	-@$(RM_F) $(DESTDIR)$(bindir)/$(TARGET)
+	$(INSTALL_PROGRAM) $(TARGET) $(DESTDIR)$(bindir)
+
+clean:
+	-$(RM_F) $(TARGET)
