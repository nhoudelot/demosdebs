#!/bin/bash -e

source /usr/share/common-install-function-ddebs/common-install-function

domain=darkside-by-theblacklotus-amiga-whd

APP_FULLNAME="Dark Side"
APP_COPYRIGHT="The Black Lotus"
APP_DESC="Demo by The Black Lotus,released in 1996"

function run()
{
	NSH_CreateWHDSaves
	NSH_ExtractDH1
	/usr/bin/fs-uae /usr/share/$domain/$domain.fs-uae $1
	NSH_RemoveDH1
}

if [ "$#" -gt "1" ]; then
	 NSH_std_usage_AMIGA
	exit 1
elif [ "$#" -lt "1" ]; then
	run
else
	case "$1" in
	--help)
		NSH_std_usage_AMIGA
		;;
	--fullscreen)
		run --fullscreen
		;;
	--version)
		NSH_version_AMIGA
		;;
	*)
		NSH_std_usage_AMIGA
		exit 1
		;;
	esac
fi

exit 0
