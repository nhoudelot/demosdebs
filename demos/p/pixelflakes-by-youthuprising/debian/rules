#!/usr/bin/make -f

%:
	dh $@

override_dh_shlibdeps:
	dh_shlibdeps -- -ldebian/resources/ --ignore-missing-info

override_dh_install:
	find linux -type f -name 'PixelFlakes_YUP_Linux' -exec chmod +x {} \;
	dh_install
	pandoc -s -t man -f markdown debian/pixelflakes-by-youthuprising.6.md -o debian/pixelflakes-by-youthuprising.6
