#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/buildflags.mk

%:
	dh $@ --with autoreconf --parallel

override_dh_auto_configure:
	./autogen.sh
	dh_auto_configure

override_dh_install:
	dh_install
	pandoc -s -t man -f markdown debian/schtroumpf2-by-knights.6.md -o debian/schtroumpf2-by-knights.6
