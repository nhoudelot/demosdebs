Description: updating makefile
 updating makefile to make it more compatible with packaging
Author: Nicolas HOUDELOT (nicolas@demosdebs.org)
Last-Update: 2020-04-29
---
This patch header follows DEP-3: http://dep.debian.net/deps/dep3/
--- a/Makefile
+++ b/Makefile
@@ -2,35 +2,30 @@
 # GNU make syntax
 
 # Change this... ATM known are OSX or empty for generic Unix/Linux
-TARGET = OSX
 
 # General defaults
-CC = gcc
-COPT = -O2 -ffast-math
-INC = 
-LIB = `sdl-config --libs` -lGL -ljpeg -lm
-MZX = cool_mzx/cool_mzx.a
-OBJ = main.o jpeg.o kukat.o mcubes.o halftone.o tolppa.o
-
-ifeq ($(TARGET),OSX)
-COPT += -DMSB -DUGLY_GL_HEADERS
-INC = -I/usr/local/include -I/sw/include -FOpenGL \
--I/System/Library/Frameworks/OpenGL.framework/Headers
-LIB = `/usr/local/bin/sdl-config --static-libs` /sw/lib/libjpeg.a -lm
-endif
-
-export
-
-dr_fungi: $(OBJ) $(MZX)
-	$(CC) -o dr_fungi $(OBJ) $(MZX) $(LIB)
-	strip dr_fungi
+SHELL := /bin/sh
+CC := gcc
+CFLAGS += -Wall $(shell pkg-config sdl gl libjpeg --cflags) -std=gnu90 -pipe
+LDFLAGS += $(shell pkg-config sdl gl libjpeg --libs) -lm
+MZX := cool_mzx/cool_mzx.a
+OBJ := main.o jpeg.o kukat.o mcubes.o halftone.o tolppa.o
+
+RM_F := rm -f
+
+TARGET=drfungi-by-fit
+
+all: $(TARGET)
+
+$(TARGET): $(OBJ) $(MZX)
+	$(CC) -o $(TARGET) $(OBJ) $(MZX) $(LDFLAGS)
 
 $(MZX):
-	cd cool_mzx && make
+	cd cool_mzx && $(MAKE)
 
 %.o: %.c
-	$(CC) $(COPT) $(INC) -c $<
+	$(CC) $(CFLAGS) $(INC) -c $<
 
 clean:
-	rm *.o dr_fungi
-	cd cool_mzx && make clean
+	-@$(RM_F) *.o $(TARGET)
+	cd cool_mzx && $(MAKE) clean
