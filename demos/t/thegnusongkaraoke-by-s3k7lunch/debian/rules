#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND  = -flto
export DEB_CXXFLAGS_MAINT_APPEND  = -flto
export DEB_LDFLAGS_MAINT_APPEND  = -flto

%:
	dh $@

override_dh_install:
	dh_install
	pandoc -s -t man -f markdown debian/thegnusongkaraoke-by-s3k7lunch.6.md -o debian/thegnusongkaraoke-by-s3k7lunch.6
