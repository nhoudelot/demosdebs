#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND  = -flto
export DEB_LDFLAGS_MAINT_APPEND  = -flto


%:
	dh $@ --parallel --sourcedirectory=src

override_dh_install:
	dh_install
	pandoc -s -t man -f markdown debian/livininabox-by-cyberneticgenetics.6.md -o debian/livininabox-by-cyberneticgenetics.6
