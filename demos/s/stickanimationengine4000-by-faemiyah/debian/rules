#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND  = -flto
export DEB_LDFLAGS_MAINT_APPEND  = -flto


%:
	dh $@  --with autoreconf

override_dh_install:
	dh_install
	pandoc -s -t man -f markdown debian/stickanimationengine4000-by-faemiyah.6.md -o debian/stickanimationengine4000-by-faemiyah.6

override_dh_installchangelogs:
	dh_installchangelogs -a ChangeLog
