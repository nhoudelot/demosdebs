#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all

ifeq "$(DEB_HOST_MULTIARCH)" "x86_64-linux-gnu"
    export DEB_CFLAGS_MAINT_APPEND  = -march=core2
endif

%:
	dh $@

override_dh_install:
	dh_install
	pandoc -s -t man -f markdown debian/stercusaccidit-by-fit.6.md -o debian/stercusaccidit-by-fit.6
