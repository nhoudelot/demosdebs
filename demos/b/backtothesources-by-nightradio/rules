#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all

ifeq "$(DEB_HOST_MULTIARCH)" "x86_64-linux-gnu"
    export DEB_CFLAGS_MAINT_APPEND  = -march=core2
endif

%:
	dh $@ --parallel --sourcedirectory=btts/make

override_dh_auto_build:
	dh_auto_build -- linux

override_dh_install:
	dh_install
	pandoc -s -t man -f markdown debian/backtothesources-by-nightradio.6.md -o debian/backtothesources-by-nightradio.6

override_dh_fixperms:
	dh_fixperms
	find debian -name '8bit_tales.sunvox' -exec chmod 0644 {} +
